@model IEnumerable<MVC_tarea.Models.Carrera>

<div class="row centered bg-light p-3">
    <img src="~/Content/img/bancarrera.jpg" width="100%" alt="">
</div>

<div class="row">

    @foreach (var item in Model)
    {
        <div class="col-xl-4 col-lg-6 col-md-6 col-sm-12 my-2">
            <div class="card col-md-12 centered" style="width: 18rem;">
                <img class="card-img-top" src="@Url.Action("getImage", "Carreras", new { id = item.IdCarrera })" alt="Card image cap">
                <div class="card-body">
                    <h4 class="card-title">Carrera: </h4>@Html.DisplayFor(modelItem => item.Nombre)
                    <p class="card-text smalltext"><h4>Descripcion:</h4> @Html.DisplayFor(modelItem => item.Descripcion) </p>
                    <p class="card-text smalltext"><h4>Materias:</h4> @Html.DisplayFor(modelItem => item.Materias) </p>
                    <p class="card-text smalltext"><h4>Ciclos:</h4> @Html.DisplayFor(modelItem => item.Ciclos) </p>
                </div>
            </div>
        </div>
        
    }

</div> 